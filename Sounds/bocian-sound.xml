<?xml version="1.0"?>
 
<PropertyList>

 <fx>

  <tyre-rumble>
   <name>tyre-rumble</name>
   <mode>looped</mode>
   <path>Aircraft/bocian/Sounds/ground_roll3.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>velocities/groundspeed-kt</property>
    <factor>0.05</factor>
   </volume>
  </tyre-rumble>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>velocities/airspeed-kt</property>
   <volume>
    <property>position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

  <speedbrake>
   <name>Speedbrake</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <greater-than>
     <property>velocities/airspeed-kt</property>
     <value>50.0</value>
    </greater-than>
   </condition>
   <volume>
    <property>surface-positions/speedbrake-pos-norm</property>
    <factor>1.0</factor>
   </volume>
  </speedbrake>

  <winch_tow>
   <name>winch_tow</name>
   <mode>looped</mode>
   <path>Aircraft/bocian/Sounds/winch_tow.wav</path>
   <condition>
    <not>
     <property>sim/hitches/winch/open</property>
    </not>
   </condition>
   <volume>
    <property>velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1</max>
   </volume>
  </winch_tow>

  <cable_release>
   <name>cable_release</name>
   <mode>once</mode>
   <path>Aircraft/bocian/Sounds/winch_release.wav</path>
   <condition>
    <property>sim/hitches/winch/open</property>
   </condition>
  </cable_release>

  <whoosh-positive>
   <name>whoosh-positive</name>
   <mode>once</mode>
   <path>Aircraft/bocian/Sounds/whoosh.wav</path>
   <condition>
    <greater-than>
     <property>orientation/pitch-rate-degps</property>
     <value>15</value>
    </greater-than>
   </condition>
   <volume>
    <property>orientation/pitch-rate-degps</property>
    <factor>0.01</factor>
    <max>1</max>
   </volume>
  </whoosh-positive>

  <whoosh-negative>
   <name>whoosh-negative</name>
   <mode>once</mode>
   <path>Aircraft/bocian/Sounds/whoosh.wav</path>
   <condition>
    <less-than>
     <property>orientation/pitch-rate-degps</property>
     <value>-15</value>
    </less-than>
   </condition>
   <volume>
    <property>orientation/pitch-rate-degps</property>
    <factor>-0.01</factor>
    <max>1</max>
   </volume>
  </whoosh-negative>

  <variometer>
   <name>variometer</name>
   <mode>looped</mode>
   <path>Aircraft/bocian/Sounds/vario.wav</path>
   <condition>
    <greater-than>
     <property>velocities/vertical-speed-fps</property>
     <value>0.01</value>
    </greater-than>
    <property>instrumentation/variometer/switch</property>
   </condition>
   <pitch>
    <property>velocities/vertical-speed-fps</property>
    <factor>0.125</factor>
    <offset>1.0</offset>
   </pitch>
   <volume>
    <property>instrumentation/variometer/volume</property>
    <factor>1</factor>
    <offset>0.0</offset>
   </volume>
  </variometer>
 </fx>
 
</PropertyList>
